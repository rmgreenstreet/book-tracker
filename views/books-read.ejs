<%- include( 'partials/header') %> 
<div class="container">

    <h1>Books I've Read</h1>
    <div class="row" id="main">
        <div class="col" id="">
            <div class="row">
                <form class="col" id="filters" action="" method="GET">
                    <h5>Filters</h5>
                    <label class="form-text">Stars</label>
                    <div class="stars mb-3">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="starRatingsFilter" id="1starFilter" value="1">
                            <label class="form-check-label" for="1starFilter">1</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="starRatingsFilter" id="2starFilter" value="2">
                            <label class="form-check-label" for="2starFilter">2</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="starRatingsFilter" id="3starFilter" value="3">
                            <label class="form-check-label" for="3starFilter">3</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="starRatingsFilter" id="4starFilter" value="4">
                            <label class="form-check-label" for="4starFilter">4</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="starRatingsFilter" id="5starFilter" value="5">
                            <label class="form-check-label" for="5starFilter">5</label>
                        </div>
                    </div>
                    <div class="mb-3">
                      <label for="tagFilter" class="form-label">Tags</label>
                      <input type="text" class="form-control" id="tagFilter">
                    </div>
                    <label class="form-text">Date Started</label>
                    <div class="input-group mb-3">
                      <input type="date" class="form-control" id="readBeginDate" placeholder="From" aria-label="From">
                      <span class="input-group-text">to</span>
                      <input type="date" class="form-control" id="readEndDate" placeholder="To" aria-label="To">
                    </div>
                    <label for="" class="form-text">Finished?</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="isBookFinished" id="bookIsFinished" value="4">
                        <label class="form-check-label" for="bookIsFinished">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="isBookFinished" id="bookNotFinished" value="5">
                        <label class="form-check-label" for="bookNotFinished">No</label>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-9" id="results">

        </div>
    </div>
</div>
<%- include( 'partials/footer') %> 

