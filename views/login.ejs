<%- include('partials/header') %> 
<div class="container">
    <h1>Login</h1>
    <div class="row">
        <div class="col-6">
            <form action="/login" method="POST" id="login-form" enctype="application/x-www-form-urlencoded">
                <div class="input-group mb-3">
                    <label for="username" class="form-label input-group-text">Username</label>
                    <input type="text" class="form-control" id="username" name= "username" placeholder="ILuvBooks101" value="<%= typeof username !== 'undefined' ? username: '' %>">
                </div>
                <div class="input-group mb-3">
                    <label for="password" class="form-label input-group-text">Password</label>
                    <input type="password" class="form-control" id="password" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
<%- include('partials/footer') %> 